{
    "compilerOptions": {
      "lib": [
          "es2018", 
          "DOM"
        ],
      "module": "commonjs",
      "target": "es2018",
      "declaration": true,
      "outDir": "./lib",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": [
      "src"
    ],
    "exclude": [
      "node_modules", 
      "**/__tests__/*"
    ]
  }